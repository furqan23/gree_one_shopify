{% comment %} Section layout style {% endcomment %}
{{ 'tpt-section.css' | asset_url | stylesheet_tag }}

{% comment %} Section configuration {% endcomment %}
{%- render 'tpt-section-setting', section: section -%}

{%- if section.index and section.settings.section_lazyload -%}
  <script src="{{ 'tpt-section-lazyload.js' | asset_url }}" defer="defer"></script>

  <tpt-section-lazyload data-url="?section_id={{ section.id }}">
    <div data-lazyload-element></div>
    <span class="tpt-section_loader"></span>
  </tpt-section-lazyload>
{%- else -%}
  {% comment %} Grid style {% endcomment %}
  {{ 'tpt-grid.css' | asset_url | stylesheet_tag }}

  {% comment %} Current section style {% endcomment %}
  {{ 'tpt-faq-two.css' | asset_url | stylesheet_tag }}

  {% comment %} tpt-accordion component {% endcomment %}
  {{ 'tpt-accordion.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'tpt-accordion.js' | asset_url }}" defer="defer"></script>

  <div class="tpt-section_container">
    <div class="tpt-section_content">
      <div class="tpt-faq-two_container">
        {% comment %} Section header {% endcomment %}
        {%- render 'tpt-section-header', section: section -%}

        <div class="tpt-section-body">
          {% comment %} Section body {% endcomment %}
          <div class="tpt-faq-two">
            {% if section.settings.group_heading != blank %}
              <div class="tpt-faq-two_group-title h3 tpt-section__foreground--color">
                {{ section.settings.group_heading }}
              </div>
            {% endif %}

            <div
              class="tpt-faq-two_list"
              style="--item-background-color: {{ section.settings.item_background_color }}; --item-text-color: {{ section.settings.item_text_color.red }},{{ section.settings.item_text_color.green }},{{ section.settings.item_text_color.blue }}; --item-border-radius: {{ section.settings.border_radius }}px"
            >
              <tpt-accordion
                class="tpt-grid tpt-accordion_border {% if section.settings.hidden_border %} tpt-accordion_hidden-border {% endif %} desktop-{{ section.settings.desktop_column }}-columns tablet-{{ section.settings.tablet_column }}-columns mobile-{{ section.settings.mobile_column }}-columns"
                data-group="{{ section.settings.group_item }}"
              >
                {%- for block in section.blocks -%}
                  <div class="tpt-grid_item">
                    <tpt-accordion-item class="{% if block.settings.active %} active {% endif %}">
                      <tpt-accordion-heading class="tpt-accordion_title h5">
                        {{- block.settings.heading -}}

                        <span class="tpt-accordion_caret">
                          <svg
                            width="10"
                            height="16"
                            viewBox="0 0 10 16"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <path d="M1.66634 14.9998L8.33301 8.33317L1.66634 1.6665" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </span>
                      </tpt-accordion-heading>

                      <tpt-accordion-data class="tpt-accordion_description">
                        {{ block.settings.description }}
                      </tpt-accordion-data>
                    </tpt-accordion-item>
                  </div>
                {%- endfor -%}
              </tpt-accordion>
            </div>
          </div>
          {% comment %} End section body {% endcomment %}
        </div>
      </div>

      {% comment %} Section footer {% endcomment %}
      {%- render 'tpt-section-footer', section: section -%}
    </div>
  </div>
{%- endif -%}{%- unless content_for_header contains 'tapita-section-script-tags' -%}{% style %}#shopify-section-{{ section.id }}{display: none !important;}{% endstyle %}{%- endunless -%}
