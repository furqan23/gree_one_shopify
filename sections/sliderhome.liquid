<section class="slider-section">
  <div class="slider-container">
    <div class="slider">
      <div class="slide active">
        {% comment %}
          {% if first_slide %}
            <video autoplay loop muted>
              <source src="{{  section.settings.first_slide_video | file_url }}" type="video/mp4">
            </video>
          {% endif %}
        {% endcomment %}

        <video autoplay loop muted preload="metadata" class="video-playerr-mobile">
          <source src="https://cdn.shopify.com/videos/c/o/v/dbca832e432143d693b8743b5a047d28.mp4" type="video/mp4">
          Your browser doesn't support the video tag.
        </video>
        <!-- add video and also poster image if there is no video so by dyfault we have and image -->
        <video
          autoplay
          loop
          muted
          preload="metadata"
          poster="https://cdn.shopify.com/s/files/1/0844/4670/7990/files/product_demo_img.jpg?v=1737546169"
          class="video-playerr-desktop"
        >
          <source src="https://cdn.shopify.com/videos/c/o/v/8305705261e540b9b8af11db0175505c.mp4" type="video/mp4">
          Your browser doesn't support the video tag.
        </video>
        <div class="static-content">
          <!--
            <h1>
              ADVANCED FORMULA &nbsp; HIGH-PERFORMANCE <br>
              VISIBLE RESULTS
            </h1>
          -->
