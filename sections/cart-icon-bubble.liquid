<span class="inline-flex items-center justify-center text-primary w-[2.625rem] h-[2.625rem] rounded-full transition-colors pointer-events-none group-hover:bg-uiMidGrey group-focus:bg-uiMidGrey">
    {%- liquid
        if cart == empty
            render 'icon-cart-empty'
        else
            render 'icon-cart'
        endif
    -%}
</span>
<span class="hidden">{{ 'templates.cart.cart' | t }}</span>
{%- if cart != empty -%}
    <div class="absolute w-[0.6875rem] h-[0.6875rem] right-2 bottom-2 flex items-center justify-center rounded-full text-[0.5rem] text-text2 bg-primary pointer-events-none">
        {%- if cart.item_count < 100 -%}
            <span class="-mt-1px" aria-hidden="true">{{ cart.item_count }}</span>
        {%- endif -%}
        <span class="hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
    </div>
{%- endif -%}
