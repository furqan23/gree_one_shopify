<div class="bg-{{ section.settings.color_scheme }}{% if section.settings.center_align_text %} text-center{% endif %}{% if section.settings.color_scheme == 'transparent' %} pt-12 large:pt-20{% else %} mt-12 py-12 large:mt-20 large:py-20{% endif %}">
    <div class="container">
        <div class="wrap{% unless section.settings.two_column %} large:w-[37%]{% endunless %}{% if section.settings.fuller_width %} large:w-[65%]{% endif %}{% if section.settings.center_align_text %} mx-auto{% endif %}">
            <div class="grid grid-cols-1 gap-6 large:gap-9{% if section.settings.two_column %} large:grid-cols-12{% endif %}">
                {%- for block in section.blocks -%}
                    {%- case block.type -%}
                    {%- when 'heading' -%}
                        <div class="col-span-1{% if section.settings.two_column %} large:col-span-6{% endif %}">
                            <h2 class="normal-case{% if block.settings.large_heading %} heading-xxl{% else %} heading-r{% endif %}{% if section.settings.text_colour %} text-{{ section.settings.text_colour }}{% endif %}" {{ block.shopify_attributes }}>
                                {{- block.settings.heading | escape -}}
                            </h2>
                        </div>
                    {%- endcase -%}
                {%- endfor -%}
                <div class="col-span-1{% if section.settings.two_column %} large:col-start-8 large:col-span-5{% endif %}">
                    {%- for block in section.blocks -%}
                        {%- case block.type -%}
                        {%- when 'text' -%}
                            <div class="wysiwyg medium:text-body-l{% if section.settings.text_colour %} text-{{ section.settings.text_colour }}{% endif %} mt-10 large:mt-14 first-of-type:mt-0" {{ block.shopify_attributes }}>
                                {{- block.settings.text -}}
                            </div>
                        {%- when 'button' -%}
                            {%- if block.settings.button_label != blank -%}
                                <div class="mt-10 large:mt-14 first-of-type:mt-0" {{ block.shopify_attributes }}>
                                    <a
                                        class="button{% if section.settings.button_style %} button--{{ section.settings.button_style }}{% endif %}"
                                        {% if block.settings.button_link == blank %}
                                            role="link"
                                            aria-disabled="true"
                                        {% else %}
                                            href="{{ block.settings.button_link }}"
                                        {% endif %}
                                    >
                                        <div class="button__label">
                                            <span>
                                                {{- block.settings.button_label | escape -}}
                                            </span>
                                            <span class="absolute top-10 left-0">
                                                {% if block.settings.secondary_button_label %}
                                                    {{- block.settings.secondary_button_label -}}
                                                {% else %}
                                                    {{- block.settings.button_label -}}
                                                {% endif %}
                                            </span>
                                        </div>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                                            <path d="M7.29289 0.292893C7.68342 -0.0976311 8.31658 -0.0976311 8.70711 0.292893L15.7071 7.29289C16.0976 7.68342 16.0976 8.31658 15.7071 8.70711L8.70711 15.7071C8.31658 16.0976 7.68342 16.0976 7.29289 15.7071C6.90237 15.3166 6.90237 14.6834 7.29289 14.2929L12.5858 9H1C0.447715 9 0 8.55229 0 8C0 7.44772 0.447715 7 1 7H12.5858L7.29289 1.70711C6.90237 1.31658 6.90237 0.683417 7.29289 0.292893Z" fill="white"/>
                                        </svg>
                                    </a>
                                </div>
                            {%- endif -%}
                        {%- endcase -%}
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
</div>

