{% comment %} 

<div class="{% unless section.settings.remove_margin %}mt-12 large:mt-20{% endunless %}">
    <div class="container">
        <div class="{% if section.settings.wrap %}wrap{% endif %}">
            {% assign imageWidth = section.settings.image.width | divided_by: 2 %}
            {% assign imageHeight = section.settings.image.height | divided_by: 2 %}
            {% assign retinaImageWidth = section.settings.image.width %}
            <img
                src="{{ section.settings.image | image_url: width: imageWidth }}"
                srcset="{{ section.settings.image | image_url: width: imageWidth }} 1x, {{ section.settings.image | image_url: width: retinaImageWidth }} 2x"
                class="max-w-full mx-auto"
                width="{{ imageWidth }}"
                height="{{ imageHeight }}"
                alt="{{ section.settings.image.alt }}"
                loading="lazy"
            >
        </div>
    </div>
</div> {% endcomment %}

