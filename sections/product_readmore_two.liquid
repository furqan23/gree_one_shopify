        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
         {
          "type": "textarea",
          "id": "readmore_one",
          "label": "readmore_one"
        },


  ],
  "presets": [
    {
      "name": "product_readmore_two",
    }
  ]
}
{% endschema %}
