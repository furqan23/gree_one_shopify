<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read More Second</title>
    <style>
                      body {
                          line-height: 1.6;
                          margin: 0;
                          padding: 0;
                      }

                      .content {
                          padding: 20px;
                          max-width: 600px;
                          margin: auto;
                      }

                      .read-more {
                          color: #ccccc;
                        text-color:#cccccc;
                          text-decoration: none;
                          cursor: pointer;
                      }

                      .read-more:hover {
                          text-decoration: underline;
                      }

                      /* Updated Popup styles for sliding in from the right */
                      .popup {
                          visibility: hidden; /* Initially hidden */
                          opacity: 0; /* Fully transparent */
                          position: fixed;
                          top: 50%; /* Start vertically centered */
                          left: 100%; /* Start off-screen to the right */
                          transform: translate(-50%, -50%); /* Adjust for centering */
                          width: 80%;
                          max-width: 900px;
                          background-color: rgba(0, 0, 0, 0);
                          z-index: 9999;


                          transition: left 0.7s ease-in-out, opacity 0.7s ease-in-out; /* Smooth sliding and fading */
                      }
                      .popup-ing {
                          visibility: hidden; /* Initially hidden */
                          opacity: 0; /* Fully transparent */
                          position: fixed;
                          top: 50%; /* Start vertically centered */
                          left: 100%; /* Start off-screen to the right */
                          transform: translate(-50%, -50%); /* Adjust for centering */
                          width: 80%;
                          max-width: 900px;
                          background-color: rgba(0, 0, 0, 0);
                          z-index: 9999;


                          transition: left 0.7s ease-in-out, opacity 0.7s ease-in-out; /* Smooth sliding and fading */
                      }

                      .popup.show {
                          visibility: visible; /* Make visible */
                          opacity: 1; /* Fully opaque */
                          left: 70%; /* Slide into center */
                      }
                      .popup-ing.show {
                          visibility: visible; /* Make visible */
                          opacity: 1; /* Fully opaque */
                          left: 70%; /* Slide into center */
                      }
                       .popup-content {
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 8px;
                    width: 80%;
                    max-width: 700px;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                    text-align: left;
                    position: relative;
                    height: auto;

                    /* overflow-y: auto; */
                  }

                  .popup .popup-content .popup-headerr {
                    padding-bottom: 50px;
                    display: flex;
                    flex-wrap: wrap;
                    overflow-y: auto;
                    max-height: 400px;
                  }
                  .popup-footerr {
                    padding: 2px 40px 15px 15px;
                    border-top: 1px solid #dddddd;
                    padding:6px 0px 0px 0px;
                    height:60px;
                  }

                  .close-btn {
                    position: absolute;
                    top: 10px;
                    right: 10px;
                    font-size: 20px;
                    color: #000;
                    cursor: pointer;
                  }
                  .button-fixed {
                    position: absolute;
                    /* top: 90%; */
                    right: 40%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 20px;
                    /* color: #000; */
                    cursor: pointer;
                  }


                      .close-btn:hover {
                          color: red;
                      }

                      /* Responsive Design */
                      @media (max-width: 768px) {
                          .popup-content {
                              width: 80%; /* Adjust width for smaller screens */
                          }
                      }

                      @media (max-width: 480px) {
                          .popup-content {
                              width: 80%; /* Further adjust for mobile devices */
                          }
                      }
                              .container {
                                  display: flex;
                                  flex-wrap: nowrap;
                                  flex-direction: row;
                                  padding: 20px;
                              }

                              .image-section, .text-section {
                                  flex: 1;
                                  padding: 10px;
                              }

                              .image-section {
                                  display: flex;
                                  justify-content: center;
                                  align-items: center;
                                 overflow: clip;
                                  overflow-clip-margin: content-box;
                              }

                              .image-section img {
                                  max-width: 100%;
                                  height: auto;
                                  border-radius: 1px;

                                 animation: scale-a-lil linear both;
                                  animation-timeline: view();
                                animation-range: 25vh 110vh;
                              }




      /* Animations of images and text fade in */
            @keyframes scale-a-lil {
              from {
                scale: 1.5;
              }
              to {
                scale: 1;
              }
            }

            @keyframes scale-a-lil-text {
        from {
          transform: scale(0.95);
          opacity: 0.0;
        }
        to {
          transform: scale(1);
          opacity: 1;
        }
      }
                              .text-section {
                                  padding: 0px 20px 0px 20px;
                                 animation: scale-a-lil-text linear both;
                                  animation-timeline: view();
                                animation-range: 25vh 65vh;
                              }

                              .text-section h1 {
                                  font-size: 24px;
                                  margin-bottom: 20px;
                              }

                              .text-section p {
                                  margin-bottom: 10px;
                                  margin-top: 0px;
                                  line-height: 1.5;
                              }

                              /* Responsive Design */
                              @media (max-width: 768px) {
                                  .container {
                                      flex-wrap: wrap;
                                  }
                                  .popup{
                                      width: 100%;
                                  }
                                  .popup.show{
                                      left:45%;
                                      font-size: 14px;
                                  }
                                  .popup-ing{
                                      top:75%;
                                      width:100%;
                                  }
                                  .popup-ing.show{
                                      left: 45%;
                                      font-size: 14px;
                                  }
                                  .image-section, .text-section {
                                      flex: 1 1 50%;
                                  }

                                  .text-section h1 {
                                      font-size: 20px;
                                  }
                              }

                              @media (max-width: 480px) {
                                  .container {
                                      flex-direction: column;
                                  }

                                  .image-section, .text-section {
                                      flex: 1 1 100%;
                                    padding:0px;
                                  }

                                  .text-section {
                                      padding: 10px;
                                  }

                                  .text-section h1 {
                                      font-size: 18px;
                                  }

                                  .text-section p {
                                      font-size: 14px;
                                  }
                              }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="image-section">
        <figure>
          <picture>
            <img
              src="{{product.metafields.custom.img_2 | image_url: width: 800, height:800    }}"
              alt="Skin Caviar Liquid asdfadsgf"
              width="auto"
              height="auto"
            >
          </picture>
        </figure>
      </div>
      <div class="text-section">
        <span>
          <br>
          <b><h2>Science</h2></b><br>
          {{- product.metafields.custom.rich_b_2 | metafield_tag }}

            {% if product.metafields.custom.readmore_b_2 != blank %}
          <a href="#" class="read-more" onclick="openPopup22(event)">Read more</a><br>
              {% endif %}
        </span>
        <br>
        <h1>Formula Facts</h1>
        <br>
        {{- product.metafields.custom.formula_fact_b_2 | metafield_tag }}

        <!-- <a href="#" class="read-more" onclick="openPopup1(event)">View Full Ingredients List</a><br> -->
        <!-- <a href="#" class="read-more" onclick="openPopup2(event)">Formulated Without</a> -->
      </div>
    </div>

    <!-- Popup -->
    <div id="popup222" class="popup">
      <div class="popup-content">
        <!-- <span class="close-btn" onclick="closePopup()">&times;</span> -->
        <div class="popup-headerr">
        
            {{ product.metafields.custom.readmore_b_2 }}
         
        </div>
        <div class="popup-footerr">
          <button
            type="submit"
            class="button button--secondary button-fixed"
            name="commit"
            id="Subscribe"
            onclick="closePopup()"
          >
            <div>CLOSE</div>
          </button>
        </div>

        <!-- <a  class="close-btn"  onclick="closePopup()">CLOSE</a> -->
      </div>
    </div>
  </body>
  <script>
    // Popup for read more
    function openPopup22(event) {
        event.preventDefault(); // Prevent page from scrolling to the top
        document.getElementById("popup222").classList.add("show");
    }



    // Close popup
    function closePopup() {
        document.getElementById("popup222").classList.remove("show");
    }
  </script>
</html>

