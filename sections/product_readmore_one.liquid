<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>read more</title>
    <style>
                          body {
                              line-height: 1.1;
                              margin: 0;
                              padding: 0;
                           
                          
                          }

                          .content {
                              padding: 20px;
                              max-width: 600px;
                              margin: auto;
                          }

                          .read-more {
                              color: #a4a4a4;
                              text-decoration: none;
                              cursor: pointer;
                          }

                          .read-more:hover {
                              text-decoration: underline;
                            color:#000000;
                          }

                          /* Updated Popup styles for sliding in from the right */
                          .popup {
                              visibility: hidden; /* Initially hidden */
                              opacity: 0; /* Fully transparent */
                              position: fixed;
                              top: 50%; /* Start vertically centered */
                              left: 100%; /* Start off-screen to the right */
                              transform: translate(-50%, -50%); /* Adjust for centering */
                              width: 80%;
                              max-width: 900px;
                              background-color: rgba(0, 0, 0, 0);
                              z-index: 9999;
                              transition: left 0.7s ease-in-out, opacity 0.7s ease-in-out; /* Smooth sliding and fading */
                          }
                          .popup-ing {
                              visibility: hidden; /* Initially hidden */
                              opacity: 0; /* Fully transparent */
                              position: fixed;
                              top: 50%; /* Start vertically centered */
                              left: 100%; /* Start off-screen to the right */
                              transform: translate(-50%, -50%); /* Adjust for centering */
                              width: 80%;
                              max-width: 900px;
                              background-color: rgba(0, 0, 0, 0);
                              z-index: 9999;


                              transition: left 0.7s ease-in-out, opacity 0.7s ease-in-out; /* Smooth sliding and fading */
                          }

                          .popup.show {
                              visibility: visible; /* Make visible */
                              opacity: 1; /* Fully opaque */
                              left: 70%; /* Slide into center */
                          }
                          .popup-ing.show {
                              visibility: visible; /* Make visible */
                              opacity: 1; /* Fully opaque */
                              left: 70%; /* Slide into center */
                          }
                           .popup-content {
                        background-color: #fff;
                        padding: 20px;
                        border-radius: 8px;
                        width: 80%;
                        max-width: 700px;
                        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                        text-align: left;
                        position: relative;
                        height: auto;

                        /* overflow-y: auto; */
                      }

                      .popup .popup-content .popup-headerr {
                        padding-bottom: 50px;
                        display: flex;
                        flex-wrap: wrap;
                        overflow-y: auto;
                        max-height: 400px;
                      }
                      .popup-footerr {
                        padding: 2px 40px 15px 15px;
                        border-top: 1px solid #dddddd;
                        padding:6px 0px 0px 0px;
                        height:60px;
                      }

                      .close-btn {
                        position: absolute;
                        top: 10px;
                        right: 10px;
                        font-size: 20px;
                        color: #000;
                        cursor: pointer;
                      }
                      .button-fixed {
                        position: absolute;
                        /* top: 90%; */
                        right: 40%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        font-size: 20px;
                        /* color: #000; */
                        cursor: pointer;
                      }


                          .button-fixed:hover {
                              color: #cccccc;
                          }


                        
                                  .container {
                                      display: flex;
                                      flex-wrap: nowrap;
                                      flex-direction: row;
                                      padding: 20px;
                                     margin-top:60px;
                                      max-width: 96%; 
                                  }

                                  .image-section, .text-section {
                                      flex: 1;
                                      padding: 10px;
                                  }

                                  .image-section {
                                      display: flex;
                                      justify-content: center;
                                      align-items: center;
                                     overflow: clip;
                                      overflow-clip-margin: content-box;
                                  }

                                  .image-section img {
                                      max-width: 100%;
                                      height: auto;
                                      border-radius: 1px;

                                     animation: scale-a-lil linear both;
                                      animation-timeline: view();
                                    animation-range: 25vh 110vh;
                                  }

                                /* .figuree img {
                  animation: scale-a-lil linear both;
                  animation-timeline: view();
                  animation-range: 25vh 75vh;
                } */
                /* } */


          /* Animations of images and text fade in */
                @keyframes scale-a-lil {
                  from {
                    scale: 1.5;
                  }
                  to {
                    scale: 1;
                  }
                }

                @keyframes scale-a-lil-text {
            from {
              transform: scale(0.95);
              opacity: 0.0;
            }
            to {
              transform: scale(1);
              opacity: 1;
            }
          }
                                  .text-section {
                                      padding: 0px 20px 0px 20px;
                                    margin-left:30px;
                                     animation: scale-a-lil-text linear both;
                                      animation-timeline: view();
                                    animation-range: 25vh 65vh;
                                  }

          .text-section strong{

             font-size: 18px; /* or any other size you prefer */
      font-weight: bold;
                                  }
                                  .text-section h1 {
                                      font-size: 20px;
                                      margin-bottom: 20px;
                                  }

                                  .text-section p {
                                      margin-bottom: 10px;
                                      margin-top: 0px;
                                      line-height: 1.1;
                                  }

                                  /* Responsive Design ----------------------------------------768 ------------------- */
                                  @media (max-width: 768px) {
                                      .container {
                                          flex-wrap: wrap;
                                         max-width: 83%;
                                      }
                                    .popup-content {
                                  width: 80%; /* Adjust width for smaller screens */
                              }
                                      .popup{
                                          width: 100%;
                                      }
                                      .popup.show{
                                          left:45%;
                                          font-size: 14px;
                                      }
                                      .popup-ing{
                                          top:75%;
                                          width:100%;
                                      }
                                      .popup-ing.show{
                                          left: 45%;
                                          font-size: 14px;
                                      }
                                      .image-section, .text-section {
                                          flex: 1 1 50%;
                                      }

                                      .text-section h1 {
                                          font-size: 20px;
                                      }
                                  }

                                   /* Responsive Design ----------------------------------------480 ------------------- */
                                  @media (max-width: 480px) {
                                      .container {
                                          flex-direction: column;
                                          max-width: 85%; 
                                      }

                                       .popup-content {
                                  width: 80%; /* Further adjust for mobile devices */
                              }

                                      .image-section, .text-section {
                                          flex: 1 1 100%;
                                      }

                                      .text-section {
                                          padding: 10px;
                                      }

                                      .text-section h1 {
                                          font-size: 16px;
                                      }

                                      .text-section p {
                                          font-size: 13px;
                                      }

                                     .popup.show{
                                          left:15%;
                                          font-size: 14px;
                                      }
                                  }
    </style>
  </head>
  <body>
    <div class="container" >
      <div class="image-section">
        <figure>
          <picture>
            <img
              src="{{product.metafields.custom.img_1 | image_url: width: 800, height:800    }}"
              alt="read more"
              width="auto"
              height="auto"
            >
          </picture>
        </figure>
      </div>
      <div class="text-section">
        <span>
          {{- product.metafields.custom.rich_b_1 | metafield_tag }}

           {% if product.metafields.custom.reamore_b_1 != blank %}
          <a href="#" class="read-more" onclick="openPopup11(event)">Read more</a><br>
             {% endif %}
        </span>
         {% if product.metafields.custom.ingredient_b_1 != blank %}
        <a href="#" class="read-more" onclick="openPopup1(event)">View Full Ingredients List</a><br>
           {% endif %}

         {% if product.metafields.custom.formulated_b_1 != blank %}
        <a href="#" class="read-more" onclick="openPopup2(event)">Formulated Without</a>
           {% endif %}
      </div>
    </div>

  

    <!-- popup2 ingredient2 -->
    <div id="popup2" class="popup">
      <div class="popup-content">
        <!-- <span class="close-btn" onclick="closePopup1()">&times;</span> -->
        <div class="popup-headerr">
          {{ product.metafields.custom.ingredient_b_1 | metafield_tag }}
        </div>
        <div class="popup-footerr">
          <button
            type="submit"
            class="button button--secondary button-fixed"
            name="commit"
            id="Subscribe"
            onclick="closePopup1()"
          >
            <div>CLOSE</div>
          </button>
        </div>

        <!-- {{ product.metafields.custom.rich_text }} -->

        <!-- <a  class="close-btn"  onclick="closePopup()">CLOSE</a> -->
      </div>
    </div>

    <div id="popup3" class="popup">
      <div class="popup-content">
        <!-- <span class="close-btn" onclick="closePopup2()">&times;</span> -->
        <div class="popup-headerr">
          {{ product.metafields.custom.formulated_b_1 | metafield_tag }}
        </div>
        <div class="popup-footerr">
          <button
            type="submit"
            class="button button--secondary button-fixed"
            name="commit"
            id="Subscribe"
            onclick="closePopup2()"
          >
            <div>CLOSE</div>
          </button>
        </div>

        

        <!-- <a  class="close-btn"  onclick="closePopup()">CLOSE</a> -->
      </div>
    </div>

   <div id="popup1" class="popup">
      <div class="popup-content">
        <!-- <span class="close-btn" onclick="closePopup2()">&times;</span> -->
        <div class="popup-headerr">
          {{ product.metafields.custom.reamore_b_1 }}
        </div>
        <div class="popup-footerr">
          <button
            type="submit"
            class="button button--secondary button-fixed"
            name="commit"
            id="Subscribe"
            onclick="closePopup11()"
          >
            <div>CLOSE</div>
          </button>
        </div>

        <!-- {{ product.metafields.custom.rich_text }} -->

        <!-- <a  class="close-btn"  onclick="closePopup()">CLOSE</a> -->
      </div>
    </div>

     
  
  <script>
    // Popup for read more
    function openPopup11(event) {
        event.preventDefault(); // Prevent page from scrolling to the top
        document.getElementById("popup1").classList.add("show");
    }


    // Popup for ingredients
    function openPopup1(event) {
        event.preventDefault(); // Prevent page from scrolling to the top
        document.getElementById("popup2").classList.add("show");
    }

    // Popup for formulated without
    function openPopup2(event) {
        event.preventDefault(); // Prevent page from scrolling to the top
        document.getElementById("popup3").classList.add("show");
    }

    // Close popup
     function closePopup11() {
        document.getElementById("popup1").classList.remove("show");
    }

    function closePopup1() {
        document.getElementById("popup2").classList.remove("show");
    }

    function closePopup2() {
        document.getElementById("popup3").classList.remove("show");
    }
  </script>
    </body>
</html>

