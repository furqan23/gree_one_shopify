    }

    .brand {
        display: flex;
        width: 100%;
        justify-content: space-between;
    }

    .btnMobile {
        display: block;
        padding: 5px;
        background-color: transparent;
        border: none;
        text-decoration: none;
        position: relative;
        width: 25px;
    }

    .mobileList {
        display: flex !important;
    }

    .btnMobile:after {
        position: absolute;
        content: '';
        width: 100%;
        height: 2px;
        background-color: #000;
        top: 5px;
        left: 0;
        transition: all 0.2s linear;
    }

    .btnMobile:before {
        position: absolute;
        content: '';
        width: 100%;
        height: 2px;
        background-color: #000;
        left: 0;
        bottom: 5px;
        transition: all 0.2s linear;
    }

    .btnMobile.active:after {
        top: 50%;
        transform: translateY(-50%) rotate(-45deg);
    }

    .btnMobile.active:before {
        top: 57%;
        transform: translateY(-50%) rotate(45deg);
    }



    .nav-left-side {
