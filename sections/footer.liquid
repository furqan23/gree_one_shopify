/* 768 to 991 */
@media (min-width:768px) and (max-width:991px) {
    .navbar {
        position: fixed;
        background-color: #fff;
        padding: 20px !important;
        flex-direction: column !important;
        justify-content: start;
        align-items: start;
        box-sizing: border-box;
        top: 0;
        left: 0;
        overflow-y: scroll;
        z-index: 100;
    }

    .navbar.mobile {
