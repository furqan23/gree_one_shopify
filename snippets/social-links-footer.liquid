{% comment %}
    Renders the site social links

    Accepts:
    - listItemClasses: {String} The classes required to style the list item

    Usage:
    {% render 'social-links',
        iconAlignment: 'justify-center'
        listItemClasses: 'inline-block align-middle mr-5 mb-5 last:mr-0'
    %}
{% endcomment %}

<ul class="flex flex-wrap gap-y-[0.625rem] body-r mediumMax:[&>li]:basis-1/2 medium:flex-col medium:gap-x-5 large:gap-y-[0.4375rem] large:gap-x-[0.875rem] {{ iconAlignment }}" role="list">
    {%- if settings.social_twitter_link != blank -%}
        <li class="{{ listItemClasses }}">
            <a href="{{ settings.social_twitter_link }}"
               class="flex items-center gap-x-[0.625rem] hover:underline"
               aria-label="{{ 'general.social.links.twitter' | t }}"
            >
                {%- render 'icon-twitter' -%}
                <span>
                    {{ 'general.social.links.x' | t }}
                </span>
            </a>
        </li>
    {%- endif -%}
    {%- if settings.social_facebook_link != blank -%}
