{% comment %}
    Renders the site social links

    Accepts:
    - listItemClasses: {String} The classes required to style the list item

    Usage:
    {% render 'social-links',
        iconAlignment: 'justify-center'
        listItemClasses: 'inline-block align-middle mr-5 mb-5 last:mr-0'
    %}
{% endcomment %}

<ul class="flex flex-wrap gap-y-[0.625rem] gap-x-3 large:gap-y-[0.4375rem] large:gap-x-[0.875rem] {{ iconAlignment }}" role="list">
    {%- if settings.social_twitter_link != blank -%}
        <li class="{{ listItemClasses }}">
            <a href="{{ settings.social_twitter_link }}"
               class="flex items-center justify-center w-[2.625rem] h-[2.625rem] rounded-full transition-colors duration-300 hover:text-uiWhite hover:bg-primary"
               aria-label="{{ 'general.social.links.twitter' | t }}"
            >
                {%- render 'icon-twitter' -%}
            </a>
        </li>
    {%- endif -%}
