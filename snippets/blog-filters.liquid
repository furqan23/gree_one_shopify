<div class="flex items-center w-full mt-10 large:mt-6 {% if blogs[blog.handle].all_tags and blogs[blog.handle].all_tags.size > 0 %}justify-between{% else %}justify-end{% endif %}">
    {%- if blogs[blog.handle].all_tags and blogs[blog.handle].all_tags.size > 0 -%}
        <modal-opener data-modal="#BlogFilters">
            <button
                type="button"
                class="button button--secondary button--small font-semibold normal-case tracking-normal px-3 text-body-r font-Myriad"
                aria-haspopup="dialog"
            >
                {% render 'icon-filter' %}
                <span>
                    {{- 'templates.blog-listing.filter_button' | t -}}
                </span>
            </button>
        </modal-opener>
    {%- endif -%}
    <div class="col-span-6 body-r large:col-span-3 large:text-right">
        <span>
            {{- 'templates.blog-listing.showing' | t -}}
        </span>
        <span class="js-blogs-showing">
            0
        </span>
        <span>
            {{- 'templates.blog-listing.of' | t -}}
        </span>
        <span>
            {{- resultsCount -}}
        </span>
        <span>
            {%- if resultsCount > 1 or resultsCount == 0 -%}
                {{- 'templates.blog-listing.articles' | t -}}
            {%- else -%}
                {{- 'templates.blog-listing.article' | t -}}
            {%- endif -%}
        </span>
    </div>
</div>

{%- if blogs[blog.handle].all_tags and blogs[blog.handle].all_tags.size > 0 -%}
    <modal-dialog id="BlogFilters" class="fixed z-1 top-0 -left-full w-full h-full opacity-0 invisible open:z-[101] open:left-0 open:opacity-100 open:visible">
        <div class="modal-overlay js-modal-overlay"></div>
        <div
            class="
                absolute bottom-0 left-0 w-full h-auto box-border bg-uiWhite overflow-scroll max-w-[27rem] h-full z-[30]
                transition-transform duration-300 -translate-x-full [.is-active_&]:translate-x-0"
            role="dialog"
            aria-labelledby="BlogFilters-Title"
            aria-modal="true"
            tabindex="-1"
        >
            <div class="sticky top-0 left-0 flex items-center justify-between gap-5 bg-uiWhite border-b border-uiMidGrey ml-2.5 mr-2 pl-4">
                <h2
                    id="BlogFilters-Title"
                    class="body-s font-Gotham font-bold uppercase tracking-[0.045rem]"
                >
                    {{- 'templates.blog-listing.filter_button' | t -}}
                </h2>
                <button id="ModalClose-BlogFilters" class="text-primary py-6 px-[1.125rem] transition-colors duration-300 hover:text-uiWhite hover:bg-primary" type="button" aria-label="{{ 'accessibility.close' | t }}">
                    <svg width="18" height="19" viewBox="0 0 12 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <line stroke="currentColor" x1="10.9629" y1="1.1973" x2="0.356327" y2="11.8039" />
                        <line stroke="currentColor" x1="10.9589" y1="11.8047" x2="0.352346" y2="1.19812" />
                    </svg>
                </button>
            </div>
            <ul class="flex flex-wrap gap-y-[0.5625rem] gap-x-1 px-[1.625rem] pt-9 pb-6 h-[calc(100%-4.25rem)]">
                <form id="blog-filter" class="flex flex-col w-full gap-y-7" data-url={{ blog.url }}>
                    <label class="flex items-center gap-x-2.5 cursor-pointer">
                        <input type="checkbox" name="filter" value="all" class="hidden">
                        <span class="checkmark block bg-uiMidGrey w-[1.125rem] h-[1.125rem]"></span>
                        <span class="body-r capitalize">{{- 'templates.blog-listing.filters_all' | t -}}</span>
                    </label>
                    {%- for tag in blogs[blog.handle].all_tags -%}
                        {%- unless tag contains "_" -%}
                            {% assign handle = tag | handle %}
                            <label class="flex items-center gap-x-2.5 cursor-pointer">
                                <input type="checkbox" name="filter" value="{{ handle }}" class="hidden">
                                <span class="checkmark block bg-uiMidGrey w-[1.125rem] h-[1.125rem]"></span>
                                <span class="body-r capitalize">{{ tag }}</span>
                            </label>
                        {%- endunless -%}
                    {%- endfor -%}
                    <button type="button" disabled class="button button-primary button--full-width mt-auto mb-0 gap-1.5" id="apply-button">
                        {{- 'templates.blog-listing.apply' | t -}}
                        <span class="apply-button__count"></span>
                    </button>
                </form>
            </ul>
        </div>
    </modal-dialog>
{%- endif -%}
